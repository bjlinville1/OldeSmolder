    <li class="menu-item scroll"> <%= user_login_links %></li>
  </ul>

</section><!-- #left-sidebar -->
<!-- end: Left Sidebar -->

<section id="main-content" class="clearfix">
  

  <%= render 'suggestion_frame_partial' %>

  <article id="carousel" class="section-wrapper clearfix" data-custom-background-img="/assets/other_images/bg6.jpg">
    <div class="content-wrapper clearfix">
      <div id="features-carousel" class="carousel slide with-title-indicators max-height" data-height-percent="70" data-ride="carousel"> 
              <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% Event.three_carousel_events(current_user.id).each do |x| %>
            <% if x == Event.three_carousel_events(current_user.id)[0] %>
              <div class="item active">
                <div class="carousel-text-content">
                  <img src= <%= x.history_image_file_path%> class="icon" alt="Lorem Ipsum">
                  <h2 class="title"><%= x.title %></h2>
                  <p>
                    <%= x.notes %>
                    <br>
                    <%= x.start %>
                    <br>
                    <%= x.event_type %>
                  </p>
                </div><!-- carousel-text-content --> 
              </div><!-- .item -->
            <% else %>      
              <div class="item">
                <div class="carousel-text-content">
                  <img src= <%= x.history_image_file_path%> class="icon" alt="Lorem Ipsum">
                  <h2 class="title"><%= x.title %></h2>
                  <p>
                    <%= x.notes %>
                    <br>
                    <%= x.start %>
                    <br>
                    <%= x.event_type %>
                  </p>
                </div><!-- carousel-text-content --> 
              </div><!-- .item -->
            <% end %>
          <% end %>

        </div> <!-- .carousel-inner -->
        
        <!-- Controls -->
        <a class="left carousel-control" href="#features-carousel" data-slide="prev"></a>
        <a class="right carousel-control" href="#features-carousel" data-slide="next"></a> 
      
      </div> <!-- #about-carousel -->
    </div> <!-- .content-wrapper -->
  </article> <!-- .section-wrapper -->

                            <!-- Profile Form -->
                            <article id="Profile" class="section-wrapper clearfix" data-custom-background-img="/assets/other_images/bg3.jpg">
                              <div class="content-wrapper clearfix">
                              <center><section class="feature-text">
                                <h3>Help us help you!</h3>
                                <p>The more information you provide us here, the more powerful our tools become, and the more impact your actions will have in your daily life.</p> 
                              </section></center>

                                <!-- Profile FORM -->
                                <section>
                                    
                                  <!-- form left col -->
                                  <div class="col-lg-10">
                                    <div class="form-group">

                                      <%= render 'devise/registrations/profile_user_input_fields'%>

                                    </div>

                                    <div class="form-group form-general-error-container"></div>           

                                  </div><!-- end: form right col -->
                              </section><!-- end: profile -->
                              </div><!-- .content-wrapper -->
                            </article><!-- .section-wrapper -->

                            <!-- Calendar -->

                            <article id="Calendar" class="section-wrapper clearfix" data-custom-background-img="/assets/other_images/bg2.jpg">
                              <div class="content-wrapper clearfix">
                                <section class="calendar row clearfix clearfix-for-1cols">
                                  <div class="calendar-item col-lg-10 col-lg-offset-1">
                                    <div class="item-content clearfix">
                                      <div class = "my_calender">
                                        <div id='calendar'>
                                        </div>
                                      </div>
                                    </div><!-- end: .item-content -->
                                  </div><!-- end: .calendar-item -->

                                </section><!-- end: calendar -->
                              </div> <!-- .content-wrapper -->
                            </article> <!-- .section-wrapper -->

                          </section><!-- #main-content -->

