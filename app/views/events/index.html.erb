<!-- Left Sidebar -->
<section id="left-sidebar">

  <div class="logo">
    <a href="#intro" class="link-scroll"><img src="/assets/other_images/smoulder_logo.png" alt="Smoulder"></a>
  </div><!-- .logo -->

  <!-- Smoulder Menu -->
  <div id="mobile-menu-icon" class="visible-xs" onClick="toggle_main_menu();"><span class="glyphicon glyphicon-th"></span></div>

  <ul id="main-menu">

    <li id="menu-item-Suggestions" class="menu-item scroll"><a href="#Suggestions">Suggestions</a></li>
    <li id="menu-item-carousel" class="menu-item scroll"><a href="#carousel">History</a></li>
    <li id="menu-item-Profile" class="menu-item scroll"><a href="#Profile">Profile</a></li>
