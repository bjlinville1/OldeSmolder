= form_for @suggestion_content do |f|
  - if @suggestion_content.errors.any?
    #error_explanation
      %h2= "#{pluralize(@suggestion_content.errors.count, "error")} prohibited this suggestion_content from being saved:"
      %ul
        - @suggestion_content.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :subcategory
    = f.text_field :subcategory
  .field
    = f.label :actual_context
    = f.text_area :actual_context
  .actions
    = f.submit 'Save'
