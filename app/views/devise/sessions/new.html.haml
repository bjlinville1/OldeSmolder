= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin", role: "form" } ) do |f|
  = devise_error_messages!
  %center
    %h2.form-signin-heading
      Welcome
      %br/
      to
      %br/
      Smoulder
  = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address"
  = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
  %center
    = f.check_box :remember_me
    = f.label :remember_me
  = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
  %center  
    = render "devise/shared/links"
